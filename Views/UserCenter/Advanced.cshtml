@model AdvancedViewModel
@{
    ViewData["Title"] = "Advanced Account Settings";
    ViewData.AddActivePage(ManageNavPages.Advanced);
}
<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage"/>
<div class="row">
    <div class="col-md-9">
        <form method="post" class="was-validated">
            <div class="custom-control custom-checkbox mt-1 mb-3">
                <input asp-for="Confirm" type="checkbox" class="custom-control-input" id="action-confirm" required>
                <label class="custom-control-label" for="action-confirm">I confirm all action in this page may cause data loss.</label>
            </div>
            
            <h5 class="mb-3 mt-3">Delete my account</h5>
            <button asp-action="DeleteAccount" class="btn btn-danger">Delete my account</button>

            <h5 class="mb-3 mt-3">Other action</h5>
            <button asp-action="ManualConfirmEmail" class="btn btn-light">Set email as confirmed</button>
        </form>
    </div>
</div>
